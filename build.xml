<project default="deploy">
	
	<property name="classpath" value="/usr/local/lib/processing-1.1/lib/core.jar"/>
	
	<!-- ick: -->
	<!--<property name="junit.classpath" value="/usr/share/ant/lib/ant-junit.jar"/>-->
	<property name="junit.classpath" value="/usr/lib/eclipse/plugins/org.junit4_4.5.0.v20090824/junit.jar"/>
	
	<property name="myProcessingLib" value="/home/dan/projects/javap5/libraries" />

	<target name="clean">
		<delete dir="build" />
	</target>
	
	<target name="compile" depends="clean">
		<mkdir dir="build/classes" />
		<javac srcdir="src" destdir="build/classes" classpath="${classpath}" />
	</target>
	
	<target name="test" depends="compile">
		<mkdir dir="build/tests" />
		<javac srcdir="test" destdir="build/tests" classpath="${classpath};${junit.classpath};build/classes" />
		<junit dir="build/tests" />
	</target>

	<target name="deploy" depends="test">
		<mkdir dir="build/jar/wordcram/library" />
		<jar destfile="build/jar/wordcram/library/wordcram.jar" basedir="build/classes" />
		<tar destfile="build/wordcram.tar" basedir="build/jar" />
	</target>
	
	<target name="updatep5" depends="deploy">
		<copy todir="${myProcessingLib}/wordcram">
			<fileset dir="build/jar/wordcram" />
		</copy>
	</target>

</project>
